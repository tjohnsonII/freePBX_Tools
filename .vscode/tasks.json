{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Everything + CLI",
      "dependsOn": [
        "webscraper:test all (cmd)"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" }
    },

    {
      "label": "webscraper:test all (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d",
        "/c",
        "call scripts\\test_webscraper_cmd.bat"
      ],
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" }
    },

    {
      "label": "webscraper:venv+deps (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d",
        "/c",
        "if not exist .venv-webscraper\\Scripts\\python.exe (py -3.12 -m venv .venv-webscraper) && .venv-webscraper\\Scripts\\python.exe -m pip install -U pip && .venv-webscraper\\Scripts\\pip.exe install -r webscraper\\requirements.txt"
      ],
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" }
    },

    {
      "label": "webscraper:smoke (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d",
        "/c",
        ".venv-webscraper\\Scripts\\python.exe webscraper\\_smoke_test.py"
      ],
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" }
    },

    {
      "label": "webscraper:ultimate --help (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d",
        "/c",
        ".venv-webscraper\\Scripts\\python.exe webscraper\\ultimate_scraper.py --help"
      ],
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" }
    },

    {
      "label": "webscraper:legacy --help (cmd)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/d",
        "/c",
        ".venv-webscraper\\Scripts\\python.exe webscraper\\legacy\\ticket_scraper.py --help && .venv-webscraper\\Scripts\\python.exe webscraper\\legacy\\scrape_vpbx_tables.py --help && .venv-webscraper\\Scripts\\python.exe webscraper\\legacy\\extract_browser_cookies.py --help"
      ],
      "problemMatcher": [],
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}
