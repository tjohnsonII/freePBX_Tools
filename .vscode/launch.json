{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Start Everything + CLI (F5)",
      "configurations": [
        "Ticket API (Debug)",
        "FreePBX Deploy Backend (Debug)",
        "FreePBX Tools Manager CLI (Debug)",
        "Webscraper Ultimate Scraper (Debug)",
        "Edge: All UIs (tabs)"
      ],
      "presentation": {
        "order": 1
      }
    }
  ],
  "configurations": [
    {
      "name": "Ticket API (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "webscraper.ticket_api.app:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8787"
      ],
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "preLaunchTask": "webscraper:ticket-api (debug)"
    },
    {
      "name": "Ticket API (Attach - debugpy)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "127.0.0.1",
        "port": 5678
      },
      "justMyCode": false,
      "preLaunchTask": "webscraper:ticket-api (debugpy)"
    },
    {
      "name": "FreePBX Deploy Backend (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "freepbx_deploy_backend.main:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8002"
      ],
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Webscraper Ultimate Scraper (Debug)",
      "type": "debugpy",
      "request": "launch",
      "module": "webscraper.ultimate_scraper",
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "FreePBX Tools Manager CLI (Debug)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/freepbx_tools_manager.py",
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Ticket UI (Next Dev + Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/webscraper/ticket-ui",
      "preLaunchTask": "ticket-ui:dev (debug)"
    },
    {
      "name": "Traceroute Visualizer (Next Dev + Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5175",
      "webRoot": "${workspaceFolder}/traceroute-visualizer-main/traceroute-visualizer-main",
      "preLaunchTask": "traceroute-visualizer:dev"
    },
    {
      "name": "FreePBX Deploy UI (Vite + Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5174",
      "webRoot": "${workspaceFolder}/freepbx-deploy-ui",
      "preLaunchTask": "freepbx-deploy-ui:dev"
    },
    {
      "name": "Polycom Yealink App (Vite + Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/PolycomYealinkMikrotikSwitchConfig-main/PolycomYealinkMikrotikSwitchConfig-main",
      "preLaunchTask": "polycom-yealink-mikrotik:dev"
    },
    {
      "name": "Edge: All UIs (tabs)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/.edge-profile",
      "runtimeArgs": [
        "--new-window",
        "http://localhost:3000",
        "http://localhost:5175",
        "http://localhost:5174",
        "http://localhost:5173"
      ]
    }
  ]
}
